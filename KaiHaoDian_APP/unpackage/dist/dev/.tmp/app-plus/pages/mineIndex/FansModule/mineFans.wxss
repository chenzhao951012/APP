._all_content{
	padding-top:40rpx;
	margin: 0 30rpx;
	font-size:28rpx;
}
._display_flex{
	display:-webkit-box;
	display:-webkit-flex;
	display:-ms-flexbox;
	display:flex;
	-webkit-box-pack: justify;
