	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
/* 关注详情 */
._focus_on_info{
	font-size:28rpx;
	border-bottom: 1rpx solid #ececec;
	padding-bottom: 40rpx;
	margin-bottom: 20rpx;
}
._focus_image{
	width:100rpx;
	height:100rpx;
	border-radius: 50%;
	border:2rpx solid #BBBBBB;
	margin-right:10rpx;
	vertical-align: middle;
}
._focus_name{
	color: #333333;
	font-weight: 600;
	height:40rpx;
	margin-bottom:20rpx;
}
._focus_button{
	width: 120rpx;
	height:58rpx;
	line-height:58rpx;
	background-color: #ffbc39;
    color: white;
	border-radius: 20rpx;
	text-align:center;
	margin: 20rpx 0;
	font-size: 24rpx;
}
._focus_button2{
	width:160rpx;
	height:58rpx;
	line-height:58rpx;
   border:2rpx solid #d2d2d2;
    color: #333333;
	border-radius: 10rpx;
	text-align:center;
	margin: 20rpx 0;
	font-size: 24rpx;
	font-weight: 600;
}
._focus_button2 ._arrow{
	padding-right: 10rpx;
}
._focus_contacts{
	width: 320rpx;
	overflow: hidden;
-o-text-overflow:ellipsis;
   text-overflow:ellipsis;
white-space: nowrap;
font-size: 24rpx;
color: #989898;
}
